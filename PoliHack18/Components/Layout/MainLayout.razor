@inherits LayoutComponentBase

@inject NavMenuHide ok
<div class="page">
    @if (ok.IsUserLoggedIn)
    {
        <div class="sidebar">
            <NavMenu />
    </div>
    }
    <main>
        

        <article class="content px-4">
            @Body
        </article>
    </main>
    

</div>
@code {
    protected override void OnInitialized()
    {
        
        ok.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        
        ok.OnChange -= StateHasChanged;
    }
}

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />
@page "/"
@inject NavigationManager NavManager
@inject NavMenuHide ok
@using MudBlazor
@using PoliHack18.Themes
<PageTitle>Login</PageTitle>
<MudThemeProvider Theme="@AppTheme.Default" IsDarkMode="true"/>
<MudContainer Class="center-container">
    <MudContainer MaxWidth="MaxWidth.ExtraSmall">
        <MudCard Elevation="25" Class="pa-8">
            <MudCardHeader>
                <MudText Typo="Typo.h5" Class="mb-4">Welcome Back!</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudForm>

                    <MudTextField T="string"
                                  Label="Email Address"
                                  InputType="InputType.Email"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Email"
                                  Required="true"
                                  Immediate="true"
                                  Class="mb-4"/>

                    <MudTextField T="string"
                                  Label="Password"
                                  InputType="InputType.Password"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Lock"
                                  Required="true"
                                  Immediate="true"
                                  Class="mb-6"/>

                    <MudButton
                        ButtonType="ButtonType.Submit"
                        Variant="Variant.Filled"
                        Color="Color.Primary"
                        Size="Size.Large"
                        EndIcon="@Icons.Material.Filled.Login"
                        FullWidth="true">
                        LOG IN
                    </MudButton>
                    <MudText Align="Align.Center" Class="mt-4">
                        <MudLink Href="/flight-test" Color="Color.Primary">
                            Still don't have an account?
                        </MudLink>
                    </MudText>
                </MudForm>
            </MudCardContent>
        </MudCard>
    </MudContainer>
</MudContainer>

